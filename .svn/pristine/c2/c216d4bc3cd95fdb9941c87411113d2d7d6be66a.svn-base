<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

    <RelativeLayout
        android:id="@+id/rl_news_info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_actionsheet_cancel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_billing_history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-03-13 14:04"
                android:textSize="12dp"
                android:textColor="@color/gw_unselect_textcolor"/>
            <TextView
                android:id="@+id/tv_billing_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="打零工互联网科技有限公司"
                android:textSize="15dp"
                android:textColor="@color/receipt_txt1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tv_billing_history_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="服务费"
                    android:textColor="@color/receipt_txt1"/>

                <TextView
                    android:id="@+id/tv_billing_history_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="50.00"
                    android:textColor="@color/chenghong_textcolor"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_billing_type_advance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/tab_selected_textcolor"
                android:text="申请中"/>
            <TextView
                android:id="@+id/tv_billing_type_sendoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/green_textcolor"
                android:visibility="gone"
                android:text="已寄出"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/next"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>