<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

    <RelativeLayout
        android:id="@+id/rl_month_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical|left"
        android:background="@color/bg_color">
        <TextView
            android:id="@+id/tv_create_yuer_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/receipt_txt2"
            android:text="本月"
            android:textSize="@dimen/small_textsize"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/pressed_layout"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textSize="@dimen/small_textsize"
                android:textColor="@color/receipt_txt2"/>


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="09:35"
                android:textSize="@dimen/small_textsize"
                android:textColor="@color/gray_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+100元"
                android:textColor="@color/gw_unselect_textcolor"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="付款-微信支付"
                android:textSize="@dimen/small_textsize"
                android:textColor="@color/gray_text"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="交易中"
            android:layout_marginRight="15dp">
        </TextView>
    </LinearLayout>


</LinearLayout>