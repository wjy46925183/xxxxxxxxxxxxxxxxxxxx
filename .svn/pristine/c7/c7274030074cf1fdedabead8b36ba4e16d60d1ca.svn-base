<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_aboat"
            android:layout_width="@dimen/height_18_80"
            android:layout_height="@dimen/height_18_80"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_18_80"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_dalinggong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_4_80"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/width_3_80"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13"/>
    </RelativeLayout>
</LinearLayout>