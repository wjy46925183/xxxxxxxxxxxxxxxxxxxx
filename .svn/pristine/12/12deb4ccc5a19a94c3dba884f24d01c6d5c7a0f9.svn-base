<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gongren.com.dlg.activity.ReceiptInfoActivity">

    <include layout="@layout/actionbar_text"/>

    <include layout="@layout/line_horizontal_gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="申请时间"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tv_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="2017-03-13 14:04"
                    android:textSize="15dp"/>
            </RelativeLayout>

            <include layout="@layout/line_horizontal_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="寄出时间"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tv_sendoff_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="15dp"/>
            </RelativeLayout>

            <include layout="@layout/line_horizontal_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收件信息"
                        android:textColor="@color/receipt_txt1"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tv_receipt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="已寄出"
                        android:textColor="@color/green_textcolor"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_receipt_receive_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任传伟"
                        android:textColor="@color/receipt_txt4"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/tv_receipt_receive_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/receipt_txt4"
                        android:textSize="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_receipt_receive_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="上海市普陀区真北路958号"
                    android:textColor="@color/receipt_txt4"
                    android:textSize="12dp"/>

            </LinearLayout>

            <include layout="@layout/line_horizontal_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票信息"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tv_receipt_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="打零工互联网科技有限公司"
                    android:textColor="@color/receipt_txt4"
                    android:textSize="12dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务费"
                        android:textColor="@color/receipt_txt4"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/tv_receipt_service_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="50元"
                        android:textColor="@color/receipt_txt3"
                        android:textSize="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_receipt_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="913101070558512086"
                    android:textColor="@color/receipt_txt4"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_receipt_company_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="上海市普陀区真北路958号"
                    android:textColor="@color/receipt_txt4"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_receipt_company_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="021-52300000"
                    android:textColor="@color/receipt_txt4"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_receipt_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="招商银行上海曹杨支行"
                    android:textColor="@color/receipt_txt4"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_receipt_bank_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="121910470710801"
                    android:textColor="@color/receipt_txt4"
                    android:textSize="12dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="开票账单"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="15dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    >
                   <!-- <ListView
                        android:id="@+id/lv_order_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:divider="@null"
                        android:dividerHeight="0dp"></ListView>-->

                    <com.common.view.swipemenulistview.SwipeMenuListView
                        android:id="@id/can_content_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/cmbkb_transparent"
                        android:dividerHeight="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
