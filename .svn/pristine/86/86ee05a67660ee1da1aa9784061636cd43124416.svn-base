<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="5dp">


    <ImageView
        android:id="@+id/searcher_common_back"
        android:layout_width="@dimen/actionbar"
        android:layout_height="match_parent"
        android:background="@drawable/pressed_layout"
        android:clickable="true"
        android:visibility="gone"
        android:padding="5dp"
        android:src="@mipmap/back_black"/>

        <EditText
            android:id="@+id/searcher_common_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/shape_edittext_gray"
            android:drawableLeft="@mipmap/map_edittext_search"
            android:drawablePadding="7dp"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:hint="请输入关键字"
            android:textColor="#c6c5c5"
            android:textSize="12sp" />

    <TextView
        android:id="@+id/searcher_common_cancel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="3dp"
        android:gravity="center"
        android:text="取消" />
</LinearLayout>