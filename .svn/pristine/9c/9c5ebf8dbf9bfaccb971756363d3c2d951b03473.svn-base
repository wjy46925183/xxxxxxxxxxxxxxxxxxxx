<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">
    <TextView
        android:id="@+id/phone_text"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_5_80"
        android:paddingLeft="@dimen/padding_15"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:text="1111111111"
        android:background="@color/white"/>
    <View
        style="@style/linethin_notfull"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_5_80"
        android:background="@color/white">
        <EditText
            android:id="@+id/psd_text"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码6-16位"
            android:paddingLeft="@dimen/padding_15"
            android:background="@null"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_textcolor"
            android:textSize="@dimen/text_size_14"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/eye"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="@dimen/margin_15"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:button="@null"
            android:background="@drawable/eye_selector"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_marginTop="35dp"
        style="@style/Button_Blue"
        android:gravity="center"
        android:text="登录"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forget_psd"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/text_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_textcolor"
            android:text="忘记密码"/>
        <TextView
            android:id="@+id/verifycode_login"
            android:textColor="@color/yellow_textcolor"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/text_size_12"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登录"/>
    </RelativeLayout>

</LinearLayout>
