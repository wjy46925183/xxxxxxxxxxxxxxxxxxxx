<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inc_height_5_5_80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/inc_width_3_80"
        android:paddingRight="@dimen/inc_width_3_80"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纳税人识别号"
            android:textColor="@color/receipt_txt1"
            android:textSize="@dimen/inc_text_size_15"/>

        <EditText
            android:id="@+id/ed_bank_name"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:textCursorDrawable="@null"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:hint="请填写纳税人识别号"
            />
    </LinearLayout>
    <View
        style="@style/inc_line_thin_full"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inc_height_5_5_80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/inc_width_3_80"
        android:paddingRight="@dimen/inc_width_3_80"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纳税人识别号"
            android:textColor="@color/receipt_txt1"
            android:textSize="@dimen/inc_text_size_15"/>

        <EditText
            android:id="@+id/ed_people_name"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:textCursorDrawable="@null"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:hint="请填写纳税人识别号"
            />
    </LinearLayout>
    <View
        style="@style/inc_line_thin_full"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inc_margin_20"
            android:layout_marginBottom="@dimen/inc_margin_20"
            android:layout_marginLeft="@dimen/inc_margin_10"
            android:text="开户银行">
        </TextView>

        <EditText
            android:id="@+id/ed_bank"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:hint="请填写"
            android:textSize="@dimen/inc_text_size_16"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/inc_margin_10"
            android:paddingTop="@dimen/inc_margin_10"
            android:layout_marginBottom="@dimen/inc_margin_20"
            android:layout_marginTop="@dimen/inc_margin_10"
            android:layout_marginRight="@dimen/inc_margin_10">
        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/inc_padding_1"
        android:background="@color/inc_recharge_color">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inc_margin_20"
            android:layout_marginBottom="@dimen/inc_margin_20"
            android:layout_marginLeft="@dimen/inc_margin_10"
            android:text="公司对公账户">
        </TextView>

        <EditText
            android:id="@+id/ed_company_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:hint="请填写"
            android:textSize="@dimen/inc_text_size_16"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/inc_margin_10"
            android:paddingTop="@dimen/inc_margin_10"
            android:layout_marginBottom="@dimen/inc_margin_20"
            android:layout_marginTop="@dimen/inc_margin_10"
            android:layout_marginRight="@dimen/inc_margin_10">
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/bt_bindCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inc_btn_selector_pay"
        android:text="立即绑定"
        android:layout_marginTop="@dimen/inc_margin_20"
        android:textColor="@color/white_color"
        android:layout_marginLeft="@dimen/inc_margin_20"
        android:layout_marginRight="@dimen/inc_margin_20">
    </Button>
</LinearLayout>