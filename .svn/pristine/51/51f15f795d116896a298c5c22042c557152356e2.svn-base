<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">
    <EditText
        android:id="@+id/phone_text"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="请输入邮箱地址或手机号"
        android:textColorHint="@color/hint_textcolor"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:background="@color/white"/>
    <View
        style="@style/linethin_notfull"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        <EditText
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:id="@+id/psd_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hint_textcolor"
            android:textSize="14sp"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/eye"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="15dp"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:button="@null"
            android:background="@drawable/eye_selector"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_marginTop="35dp"
        style="@style/Button_Blue"
        android:text="注册"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/regist"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_textcolor"
            android:text="注册"/>
        <TextView
            android:id="@+id/forget_psd"
            android:textColor="@color/yellow_textcolor"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"/>
    </RelativeLayout>

</LinearLayout>
