<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/phone_text"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_5_80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_15"
        android:textSize="@dimen/text_size_14"
        android:text="13321917860"
        android:textColor="@color/text_color"
        android:background="@color/white"/>
    <View
        style="@style/linethin_notfull"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_5_80"
        android:background="@color/white">
        <EditText
            android:id="@+id/code_text"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/padding_15"
            android:background="@null"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_textcolor"
            android:textSize="@dimen/text_size_14"
            android:layout_weight="5"/>
        <View android:layout_width="0.5dp"
            android:layout_marginTop="@dimen/margin_7"
            android:layout_height="30dp"
            android:background="@color/bg_color"/>
        <LinearLayout
            android:id="@+id/getcode_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:id="@id/wait_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time"
                    android:paddingTop="@dimen/padding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_textcolor"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_horizontal"
                    android:text="59秒后"/>

                <TextView
                    android:paddingBottom="@dimen/padding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_textcolor"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_horizontal"
                    android:text="重新获取"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/getNew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"
                android:textColor="@color/yellow_textcolor"
                android:text="重新获取"/>

        </LinearLayout>
    </LinearLayout>
    <View style="@style/linethin_notfull"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_5_80"
        android:background="@color/white">
        <EditText
            android:id="@+id/psd_text"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="请输入密码6-16位"
            android:paddingLeft="@dimen/padding_15"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_textcolor"
            android:textSize="@dimen/text_size_14"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/eye"
            android:layout_width="@dimen/height_5_5_80"
            android:layout_height="@dimen/height_5_5_80"
            android:layout_marginRight="@dimen/margin_25"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:button="@null"
            android:background="@drawable/eye_selector"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnNext"
        style="@style/Button_Blue"
        android:layout_marginTop="@dimen/margin_30"
        android:text="登录"/>

</LinearLayout>
