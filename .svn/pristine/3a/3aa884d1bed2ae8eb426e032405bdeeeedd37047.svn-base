<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/inc_padding_10"
    android:paddingRight="@dimen/inc_padding_10">

    <com.dlg.personal.home.view.HirerContentCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inc_bg_white_top_corner"
        />

    <TextView style="@style/inc_line_thin_full" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/inc_bg_white_lower_left_corner"
            android:gravity="center"
            android:padding="@dimen/inc_padding_10"
            android:text="分享"
            android:textColor="@color/inc_app_color_grey"
            android:textSize="@dimen/inc_text_size_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hire_ta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/inc_bg_orange_lower_right_corner"
            android:gravity="center"
            android:padding="@dimen/inc_padding_10"
            android:text="雇TA"
            android:textColor="@color/inc_app_color_white"
            android:textSize="@dimen/inc_text_size_12" />
    </LinearLayout>

</LinearLayout>