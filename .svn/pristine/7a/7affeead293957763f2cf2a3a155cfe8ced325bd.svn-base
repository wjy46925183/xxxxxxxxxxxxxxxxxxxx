<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_content_linear"
        style="@style/xq_linear_style"
        android:background="@drawable/pressed_layout">

        <include layout="@layout/order_people_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/left_right_jx">

            <TextView
                android:id="@+id/income_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="报酬"
                android:textColor="@color/gray_textcolor"
                android:textSize="@dimen/small_textsize" />

            <TextView
                android:id="@+id/income_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="100元"
                android:textColor="@color/chenghong_textcolor"
                android:textSize="@dimen/small_textsize" />
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/left_right_jx" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/left_right_jx">

            <TextView
                android:id="@+id/xiaofei_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="小费"
                android:textColor="@color/gray_textcolor"
                android:textSize="@dimen/small_textsize" />

            <EditText
                android:id="@+id/xiaofei_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/util_text"
                android:background="@color/transparent_color"
                android:hint="请写金额"
                android:textColor="@color/chenghong_textcolor"
                android:textCursorDrawable="@null"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:textColorHint="@color/hint_textcolor"
                android:textSize="@dimen/small_textsize" />

            <TextView
                android:id="@+id/util_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="元"
                android:textColor="@color/chenghong_textcolor"
                android:textSize="@dimen/small_textsize" />
        </RelativeLayout>
        <View
            android:id="@+id/line3"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/left_right_jx" />
        <RelativeLayout
            android:id="@+id/baoxian_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/left_right_jx">
            <TextView
                android:id="@+id/baoxianfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="保险费"
                android:textColor="@color/gray_textcolor"
                android:textSize="@dimen/small_textsize" />
            <TextView
                android:id="@+id/baoxian_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/chenghong_textcolor"
                android:textSize="@dimen/small_textsize" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
