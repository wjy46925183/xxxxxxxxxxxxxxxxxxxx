<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3_5_80"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_3_80"
                android:text="发票详情"
                android:textColor="@color/receipt_txt2"
                android:textSize="@dimen/text_size_12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司抬头"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <EditText
                    android:id="@+id/et_company_title"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入公司抬头"
                    android:textCursorDrawable="@null"
                    />
            </LinearLayout>

            <View
                style="@style/linethin_notfull"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票内容"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/tv_service_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="服务费"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>
            </LinearLayout>

            <View
                style="@style/linethin_notfull"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票金额"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/tv_invoice_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.00元"
                    android:textColor="@color/chenghong_textcolor"
                    android:textSize="@dimen/text_size_15"/>
            </LinearLayout>

            <View
                style="@style/linethin_notfull"/>

            <RelativeLayout
                android:id="@+id/rl_more_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="更多信息"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3_5_80"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_3_80"
                android:text="收件信息"
                android:textColor="@color/receipt_txt2"
                android:textSize="@dimen/text_size_12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收件人"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <EditText
                    android:id="@+id/et_addressee"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写收件人"
                    android:textCursorDrawable="@null"
                    />
            </LinearLayout>

            <View
                style="@style/linethin_notfull"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <EditText
                    android:id="@+id/et_relation_telephone"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写联系电话"
                    android:textCursorDrawable="@null"
                    />
            </LinearLayout>

            <View
                style="@style/linethin_notfull"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <EditText
                    android:id="@+id/et_location_area"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写所在地区"
                    android:textCursorDrawable="@null"
                    />
            </LinearLayout>

            <View
                style="@style/linethin_notfull"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_5_80"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_3_80"
                android:paddingRight="@dimen/width_3_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:textColor="@color/receipt_txt1"
                    android:textSize="@dimen/text_size_15"/>

                <EditText
                    android:id="@+id/et_bankaccount_address"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写开户行地址"
                    android:textCursorDrawable="@null"
                    />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3_5_80"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_3_80"
                android:text="支付方式"
                android:textColor="@color/receipt_txt2"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"/>


            <ListView
                android:id="@+id/lv_pay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </ListView>

            <View
                style="@style/linethin_notfull"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_6_80"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <View
            style="@style/linethin_notfull"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/width_3_80"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pay_on_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/receipt_txt1"
                android:textSize="@dimen/width_3_80"
                android:text="代收税点6%"/>
            <TextView
                android:id="@+id/tv_select_receipt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_3_80"
                android:textColor="@color/chenghong_textcolor"
                android:textSize="@dimen/text_size_15"
                android:text="50元"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_btn_payment"
            android:layout_width="@dimen/width_22_80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/orange_yellow"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:text="支付"/>
    </RelativeLayout>
</RelativeLayout>