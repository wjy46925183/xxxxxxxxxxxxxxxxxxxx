<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="昵称" />
        <EditText style="@style/right_edit_text"
            android:id="@+id/nickName_text"/>
    </LinearLayout>
    <View style="@style/linethin_notfull" />


    <LinearLayout
        android:id="@+id/name_layout"
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="真实姓名" />
        <TextView
            android:id="@+id/name_text"
            style="@style/right_edit_text"
            android:textColor="@color/text_color"
            android:text="实名认证"
            android:layout_marginRight="@dimen/margin_5"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"/>
    </LinearLayout>
    <View style="@style/linefat_full" />


    <LinearLayout
        android:id="@+id/sign_layout"
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="身份" />
        <TextView
            android:id="@+id/statues_text"
            style="@style/right_edit_text"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/text_color"
            android:text="自由工作者"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"/>
    </LinearLayout>
    <View style="@style/linefat_full" />


    <LinearLayout
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="身高 cm" />
        <EditText
            android:id="@+id/height_text"
            style="@style/right_edit_text"
            android:inputType="number"
            android:maxLength="3" />
    </LinearLayout>
    <View style="@style/linethin_notfull"/>


    <LinearLayout
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="体重 kg" />
        <EditText
            android:id="@+id/weight_text"
            style="@style/right_edit_text"
            android:inputType="number"
            android:maxLength="3" />
    </LinearLayout>
    <View style="@style/linefat_full" />


    <LinearLayout
        android:id="@+id/address_layout"
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="所在地" />
        <TextView
            android:id="@+id/address_text"
            style="@style/right_edit_text" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"/>
    </LinearLayout>
    <View style="@style/linefat_full" />


    <LinearLayout
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="邮箱" />
        <TextView
            android:id="@+id/mail_text"
            style="@style/right_edit_text" />
    </LinearLayout>
    <View style="@style/linethin_notfull"/>


    <LinearLayout
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="QQ" />
        <EditText
            android:id="@+id/qq_text"
            style="@style/right_edit_text"
            android:inputType="number" />
    </LinearLayout>
    <View style="@style/linefat_full" />


    <LinearLayout
        style="@style/MyProfile_Layout">
        <TextView
            style="@style/left_text_style"
            android:text="个性签名" />
        <EditText
            android:id="@+id/sign_text"
            style="@style/right_edit_text"
            android:maxLength="30" />
    </LinearLayout>

</LinearLayout>
