<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零工"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/work_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="right|center"
            android:hint="输入工种名称"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

    </LinearLayout>

    <include
        layout="@layout/line_horizontal_gray"/>

    <LinearLayout
        android:id="@+id/layout_worker_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/pressed_layout"
        android:clickable="true"
        android:layout_marginTop="0.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="类型"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/et_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:hint="请选择类型"
            android:drawableRight="@mipmap/next"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_down_accept_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:layout_marginTop="0.5dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报酬(元)"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/low_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:gravity="right|center"
            android:hint="请输入最低接受报酬"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_zhengshu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clickable="true"
        android:layout_marginTop="0.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:text="单位"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/unit_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="天"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/type_style_yellow"
            android:textColor="@color/tab_selected_textcolor"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/unit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="小时"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/unit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="单"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_comit"
        style="@style/Button_Blue"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="搜索"/>

    <TextView
        android:text="搜索历史"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_weight="3" />

</LinearLayout>
