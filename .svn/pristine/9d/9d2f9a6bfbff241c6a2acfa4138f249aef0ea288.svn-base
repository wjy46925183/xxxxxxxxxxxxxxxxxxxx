<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/bg_color"
              >

    <RelativeLayout
        android:id="@+id/rl_day_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="#00000000">
        <TextView
            android:id="@+id/tv_bill_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/receipt_txt2"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:text="2016年12月"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <CheckBox
                android:id="@+id/cb_bill_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:button="@drawable/receipt_check_selector"
                android:textColor="@color/receipt_txt1"
                android:scaleX="1.5"
                android:scaleY="1.5"
               />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bill_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"/>
            <TextView
                android:id="@+id/tv_bill_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="09:34"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bill_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/receipt_txt1"
                android:textSize="15dp"
                android:text="付款"/>
            <TextView
                android:id="@+id/tv_bill_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gw_unselect_textcolor"
                android:textSize="12dp"
                android:visibility="gone"
                android:text="付款给XXX"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tv_bill_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chenghong_textcolor"
                android:textSize="15dp"
                android:text="50.00元"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>