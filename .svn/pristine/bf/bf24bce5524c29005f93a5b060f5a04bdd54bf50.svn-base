<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/inc_margin_20"
        android:text="已发送验证码到您的手机"
        android:textColor="@color/black_text"
        android:textSize="@dimen/inc_text_size_18" />

    <TextView
        android:id="@+id/tv_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/inc_margin_10"
        android:textColor="@color/black_text"
        android:textSize="@dimen/inc_text_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/inc_margin_30"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/inc_margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/black_text"
            android:textSize="@dimen/inc_text_size_16" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:textCursorDrawable="@null"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inc_margin_15"
            android:layout_weight="1"
            android:background="@null"
            android:hint="4位验证码"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="@dimen/inc_text_size_16" />

        <TextView
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/inc_margin_35"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:layout_marginRight="0dp"
            android:text="获取验证码"
            android:textSize="@dimen/inc_text_size_14" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/inc_Button_Blue"
        android:layout_marginTop="@dimen/inc_margin_20"
        android:text="下一步" />
</LinearLayout>