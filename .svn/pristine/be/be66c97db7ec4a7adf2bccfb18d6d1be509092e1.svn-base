<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/weibo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_text"
        android:layout_marginTop="10dp"
        android:text="一叶建木"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_colors_grey"
        android:layout_marginTop="10dp"
        android:text="欢迎加入打零工,现在绑定手机号"/>
    <EditText
        android:id="@+id/phone_text"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="请输入手机号"
        android:textColorHint="@color/hint_textcolor"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:background="@color/white"/>
    <View
        style="@style/linethin_notfull"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        <EditText
            android:layout_gravity="center_vertical"
            android:id="@+id/code_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hint_textcolor"
            android:textSize="14sp"
            android:layout_weight="5"/>
        <View android:layout_width="0.5dp"
            android:layout_marginTop="7dp"
            android:layout_height="30dp"
            android:background="@color/bg_color"/>
        <TextView
            android:id="@+id/getcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/yellow_textcolor"
            android:gravity="center"
            android:textSize="14sp"
            android:text="获取验证码"/>
    </LinearLayout>

</LinearLayout>
