<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
              xmlns:tools="http://schemas.android.com/tools"
    android:background="#efefef"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_myservice"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:layout_marginBottom="0.5dp"
        >

    <RadioButton
        android:id="@+id/boss_order_checkbox"
        android:layout_width="wrap_content"
        style="@style/checkbox_style"
        android:clickable="false"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/boss_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                tools:text="服务员"
                android:textColor="#202020"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/boss_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                tools:text="100元/天"
                android:layout_marginLeft="15dp"
                android:textColor="@color/orange_yellow"
                android:textSize="15sp" />
            </LinearLayout>
        <TextView
            android:id="@+id/boss_order_type"
            android:text="志愿义工"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#a3a3a3"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/boss_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            tools:text="02-12至18  9：00-18：00"
            android:textColor="#a3a3a3"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>
