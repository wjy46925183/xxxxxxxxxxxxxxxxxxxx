<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/inc_padding_2"
        android:background="@color/inc_recharge_color">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inc_margin_20"
            android:layout_marginBottom="@dimen/inc_margin_20"
            android:layout_marginLeft="@dimen/inc_margin_10"
            android:text="真实姓名">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/tv_realName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inc_margin_10"
            android:layout_marginTop="@dimen/inc_margin_10"
            android:layout_marginRight="@dimen/inc_margin_10">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/inc_padding_1"
        android:background="@color/inc_recharge_color">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inc_margin_20"
            android:layout_marginBottom="@dimen/inc_margin_20"
            android:layout_marginLeft="@dimen/inc_margin_10"
            android:text="支付宝账号">
        </TextView>

        <EditText
            android:id="@+id/ed_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:hint="请输入您的账号"
            android:textSize="@dimen/inc_text_size_16"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/inc_margin_10"
            android:paddingTop="@dimen/inc_margin_10"
            android:layout_marginBottom="@dimen/inc_margin_20"
            android:layout_marginTop="@dimen/inc_margin_10"
            android:layout_marginRight="@dimen/inc_margin_10">
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/bt_bindAli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inc_btn_selector_pay"
        android:text="绑定支付宝"
        android:layout_marginTop="@dimen/inc_margin_20"
        android:textColor="@color/white_color"
        android:layout_marginLeft="@dimen/inc_margin_20"
        android:layout_marginRight="@dimen/inc_margin_20">
    </Button>
</LinearLayout>