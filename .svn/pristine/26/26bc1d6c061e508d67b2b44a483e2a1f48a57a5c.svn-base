<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bossmap_layout_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_guzhu_xuqiu_view"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bossmap_iv_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bossmap_iv_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_default_user" />

                <TextView
                    android:id="@+id/bossmap_tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:singleLine="true"
                    android:textColor="#ff7a52"
                    android:textSize="12sp"
                    tools:text="36.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:singleLine="true"
                    android:text="诚信档案"
                    android:textColor="#c5c5c5"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/bossmap_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:maxLength="8"
                        android:textColor="#202020"
                        android:textSize="15sp"
                        tools:text="柳如逝" />

                    <TextView
                        android:id="@+id/bossmap_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textColor="#ffb552"
                        android:textSize="10sp"
                        tools:text="已接10单" />
                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_color_yellow"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:textSize="@dimen/text_size_10"
                        />
                    <TextView
                        android:id="@+id/bossmap_tv_distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#c5c5c5"
                        android:textSize="12sp"
                        tools:text="距离352m" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <RatingBar
                        android:id="@+id/bossmap_tv_starts"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressDrawable="@drawable/star_yellow"
                        android:stepSize="1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/bossmap_tv_demand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="middle"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:textColor="#7e7e7e"
                    android:textSize="12sp"
                    tools:text="电工证、焊工证" />

                <TextView
                    android:id="@+id/bossmap_tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    tools:text="想从事电工或者焊工方面的工作" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/line_horizontal_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/bossmap_layout_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pressed_layout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="#626262"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/layout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FA5F38"
                        android:visibility="gone"
                        android:textSize="15sp"
                        tools:text="合计:288元" />

                    <TextView
                        android:id="@+id/tv_remuneration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text"
                        android:textSize="15sp"
                        tools:text="报酬:200元" />

                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <LinearLayout
                android:id="@+id/bossmap_layout_active"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffb552"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bossmap_layout_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>