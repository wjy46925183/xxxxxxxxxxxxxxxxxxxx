<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_layout"
        android:orientation="vertical">

        <include
            layout="@layout/order_head_layout"
            android:background="@color/white_color"
            />

        <View
            android:id="@+id/line1"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/left_right_jx"
            android:layout_marginRight="@dimen/left_right_jx"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/pay_relative"
            style="@style/xq_peoples_linear_style"
            android:visibility="gone"
            >

            <TextView
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="待付款"/>

            <LinearLayout
                android:id="@+id/pay_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/pay_num_text"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/pay_num_text"
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:id="@+id/ll_head_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pay_num_text"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pay_num_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/left_right_jx"
            android:layout_marginRight="@dimen/left_right_jx"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/pre_relative"
            style="@style/xq_peoples_linear_style"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/jiedan_hint"
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="有人接单"/>

            <LinearLayout
                android:id="@+id/jiedan_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/jiedan_num_text"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/jiedan_num_text"
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:id="@+id/ll_head_jiedan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/jiedan_num_text"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/jiedan_num_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <View
            android:id="@+id/line3"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/left_right_jx"
            android:layout_marginRight="@dimen/left_right_jx"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/doing_relative"
            style="@style/xq_peoples_linear_style"
            android:visibility="gone"
            >

            <TextView
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="正在进行中"/>

            <LinearLayout
                android:id="@+id/doing_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/doing_num_text"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/doing_num_text"
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""/>

            <LinearLayout
                android:id="@+id/ll_head_doing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/doing_num_text"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/doing_num_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <View
            android:id="@+id/line4"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/left_right_jx"
            android:layout_marginRight="@dimen/left_right_jx"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/finish_relative"
            style="@style/xq_peoples_linear_style"
            android:visibility="gone"
            >

            <TextView
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="已完成"/>

            <LinearLayout
                android:id="@+id/finish_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/finish_num_text"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/finish_num_text"
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""/>

            <LinearLayout
                android:id="@+id/ll_head_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/finish_num_text"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/finish_num_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <View
            android:id="@+id/line5"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/left_right_jx"
            android:layout_marginRight="@dimen/left_right_jx"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/cancelled_relative"
            style="@style/xq_peoples_linear_style"
            android:visibility="gone"
            >

            <TextView
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="已取消"/>

            <LinearLayout
                android:id="@+id/fcancelled_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cancelled_num_text"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/cancelled_num_text"
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""/>

            <LinearLayout
                android:id="@+id/ll_head_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cancelled_num_text"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/cancelled_num_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <View
            android:id="@+id/line6"
            style="@style/small_allline_style"
            android:layout_marginLeft="@dimen/left_right_jx"
            android:layout_marginRight="@dimen/left_right_jx"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/invitation_relative"
            style="@style/xq_peoples_linear_style"
            android:visibility="gone"
            >

            <TextView
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="等待雇员同意"/>

            <LinearLayout
                android:id="@+id/invitation_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/invitation_num_text"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/invitation_num_text"
                style="@style/xq_gray_smalltext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""/>

            <LinearLayout
                android:id="@+id/ll_head_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/invitation_num_text"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/invitation_num_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>