<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_5"
        android:background="@color/recharge_color">
     </TextView>

    <ListView
        android:id="@+id/lv_pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/padding_2"
        android:divider="@color/recharge_color">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_10"
        android:background="@color/recharge_color">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="金额（元）"
            android:padding="@dimen/padding_10">
         </TextView>

        <EditText
            android:id="@+id/ed_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingRight="@dimen/padding_10"
            android:background="@null"
            android:inputType="number">
         </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/bt_recharge"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:background="@drawable/btn_selector_pay"
        android:text="立即充值"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white">
    </Button>
</LinearLayout>