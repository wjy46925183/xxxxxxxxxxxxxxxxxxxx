<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/inc_height_8_80"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/inc_height_2_80"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_bank"
            android:layout_width="@dimen/inc_height_5_80"
            android:layout_height="@dimen/inc_height_5_80"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inc_height_5_80"
            android:textSize="@dimen/inc_text_size_18"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View
        style="@style/inc_linethin_notfull"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
</LinearLayout>