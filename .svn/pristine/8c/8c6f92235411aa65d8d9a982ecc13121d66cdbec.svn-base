<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/actionbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="二代身份证" />

    <RelativeLayout
        android:id="@+id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/shenfenzheng2x" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="其他" />
    <RelativeLayout
        android:id="@+id/layout_huzhao"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="护照"
            android:textColor="@color/cmbkb_lightblack"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/enter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    <View style="@style/small_line_style"/>
    <RelativeLayout
        android:id="@+id/layout_taiwan"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="台湾居民来往大陆通行证"
            android:textColor="@color/cmbkb_lightblack"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/enter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    <View style="@style/small_line_style"/>
    <RelativeLayout
        android:id="@+id/layout_gangao"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="港澳居民来往内地通行证"
            android:textColor="@color/cmbkb_lightblack"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/enter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_gray"/>

</LinearLayout>
