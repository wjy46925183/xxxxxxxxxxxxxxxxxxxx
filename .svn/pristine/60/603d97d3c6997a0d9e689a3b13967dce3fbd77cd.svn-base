<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/map_distance"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/searcher_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="服务员"
                android:textColor="#202020"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/searcher_address_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="上海市普陀区金沙江路1325号"
                android:layout_marginTop="5dp"
                android:textColor="#a3a3a3"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/small_allline_style"
        android:layout_marginLeft="@dimen/left_right_jx"
        android:layout_marginRight="@dimen/left_right_jx"
        />

</LinearLayout>