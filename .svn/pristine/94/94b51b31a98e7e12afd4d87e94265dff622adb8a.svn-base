<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    >
    <include
        layout="@layout/actionbar"
        />
    <View
        style="@style/small_allline_style"
        />

    <include
        android:id="@+id/guyuan_head"
        layout="@layout/order_people_item"
        />

    <LinearLayout
        android:id="@+id/order_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:visibility="gone"
        >
        <include
            layout="@layout/order_head_layout"
            android:layout_width="match_parent"
            android:layout_height="62.4dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:visibility="visible"
            />
    </LinearLayout>

    <View
        style="@style/bold_line_style"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        >
        <!--星级评分-->
        <RatingBar
            android:id="@+id/starbar"
            style="@style/max_star_style"
            android:numStars="5"
            android:rating="5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_30"
            />
        <TextView
            android:id="@+id/pingfen_detail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="非常满意，无可挑剔"
            android:textSize="@dimen/small_textsize"
            android:textColor="@color/chenghong_textcolor"
            />
        <GridView
            android:id="@+id/pf_words_gridview"
            android:layout_width="@dimen/px_530"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:layout_gravity="center_horizontal"
            android:numColumns="2"
            android:verticalSpacing="@dimen/px_30"
            android:horizontalSpacing="@dimen/px_30"
            />
        
        <EditText
            android:id="@+id/desc_edit"
            android:layout_width="@dimen/px_530"
            android:layout_height="@dimen/px_80"
            android:background="@drawable/edit_bg"
            android:padding="5dp"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_gravity="center_horizontal"
            android:hint="请输入其他评价"
            android:textColorHint="#99aaaaaa"
            android:textColor="@color/black_textcolor"
            android:textSize="@dimen/normal_textsize"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/commit_btn"
        style="@style/bottom_btn_style"
        android:text="确认评价"
        />
</LinearLayout>
