<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

    <RelativeLayout
        android:id="@+id/rl_day_bg"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="#00000000">
        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:text="本月"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_news_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_actionsheet_cancel">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_system_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务员100元/1天"
                android:textSize="15dp"
                android:textColor="@color/chenghong_textcolor"/>

            <TextView
                android:id="@+id/tv_system_news_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:text="点击查看"
                android:textColor="@color/gray_text"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleX="0.8"
            android:scaleY="0.7"
            android:src="@mipmap/next"/>
    </RelativeLayout>


</LinearLayout>