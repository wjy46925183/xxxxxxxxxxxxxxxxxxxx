<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bossmap_layout_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bar_order_yellow"
        android:gravity="center_vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="7dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_guzhu_xuqiu_view"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bossmap_iv_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_default_user" />

                <TextView
                    android:id="@+id/tv_trust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:singleLine="true"
                    android:text="36.0"
                    android:textColor="#ff7a52"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="诚信档案"
                    android:textColor="#c5c5c5"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:maxLength="8"
                        android:textColor="#202020"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/has_form"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="2dp"
                        android:paddingLeft="15dp"
                        android:textColor="#ffb552"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="距离352m"
                        android:textColor="#c5c5c5"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <RatingBar
                        android:id="@+id/rb_star"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressDrawable="@drawable/star_yellow"
                        android:rating="5"
                        android:stepSize="1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="middle"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#7e7e7e"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_certificate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <include layout="@layout/line_horizontal_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报酬"
                    android:textColor="#7e7e7e"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1元"
                    android:textColor="#ffb552"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小费"
                    android:textColor="#7e7e7e"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/xiaofei_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/util_text"
                    android:layout_weight="1"
                    android:background="@color/transparent_color"
                    android:gravity="center_vertical|right"
                    android:hint="请输入小费"
                    android:inputType="number"
                    android:textColor="#ffb552"
                    android:textColorHint="@color/hint_textcolor"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/small_textsize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 元"
                    android:textColor="#ffb552"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/line_horizontal_gray" />

