<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#00000000"
              >

    <RelativeLayout
        android:id="@+id/rl_day_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:background="#00000000">
        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:text="12:00"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_news_info"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="125dp"
            android:background="@drawable/bg_actionsheet_cancel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_system_news_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="情人节陪吃陪玩陪喝？"
                    android:textSize="15dp"
                    android:maxLines="2"
                    android:textColor="@color/black_textcolor"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/next"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_news_image_fillet">
            <ImageView
                android:id="@+id/img_activity_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_find_banner"
                android:scaleType="fitXY"/>
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>