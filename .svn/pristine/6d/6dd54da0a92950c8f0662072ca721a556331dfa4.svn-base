<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_receipt_bill_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/receipt_txt4"
        android:textSize="12dp"
        android:text="2017-03-18 12:00"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_receipt_bill_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/receipt_txt4"
            android:textSize="12dp"
            android:text="付款"/>
        <TextView
            android:id="@+id/tv_receipt_bill_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/receipt_txt4"
            android:textSize="12dp"
            android:text="付给XXX"/>
        <TextView
            android:id="@+id/tv_receipt_bill_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/receipt_txt4"
            android:textSize="12dp"
            android:text="50.00"/>
    </LinearLayout>
</LinearLayout>