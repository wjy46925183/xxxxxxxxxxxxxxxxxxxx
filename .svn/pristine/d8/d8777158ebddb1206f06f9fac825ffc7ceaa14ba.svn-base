<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#efefef"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_service_bg"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10">
        <RadioButton
            android:id="@+id/check_service"
            android:layout_width="wrap_content"
            style="@style/checkbox_style"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="服务员"
            android:textColor="#202020"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/check_service"/>
        <TextView
            android:id="@+id/service_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="服务员"
            android:textColor="@color/textColor_black_light02"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/margin_7"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/check_service"
            android:layout_below="@+id/service_name"
            android:layout_marginBottom="@dimen/margin_15"
            />
        <TextView
            android:id="@+id/service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="120元/天"
            android:textColor="@color/app_color_yellow"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/service_name"
            android:layout_marginBottom="@dimen/margin_15"
            />
    </RelativeLayout>
</FrameLayout>