<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="gongren.com.dlg.activity.RevisePassWordActivity">

    <include layout="@layout/actionbar_text"/>
    <include layout="@layout/line_horizontal_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/tv_original_pass"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="44dp"
            android:maxLength="18"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:background="@null"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            />
        <include layout="@layout/line_horizontal_gray" />
        <EditText
            android:id="@+id/tv_new_pass"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="44dp"
            android:maxLength="18"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:background="@null"
            android:hint="请输入新密码"
            />
        <include layout="@layout/line_horizontal_gray" />
        <EditText
            android:id="@+id/tv_affirm_pass"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:maxLength="18"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:background="@null"
            android:hint="请确认密码"
            />
    </LinearLayout>
    <Button
        android:id="@+id/but_revise_pass"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="15dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/revise_pass_btn"
        />
</LinearLayout>
