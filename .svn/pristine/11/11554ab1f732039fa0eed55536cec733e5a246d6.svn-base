<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#efefef"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:orientation="vertical">

        <include layout="@layout/item_public_hire"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginRight="@dimen/margin_25"/>
        <RelativeLayout
            android:paddingLeft="@dimen/margin_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:background="@drawable/pressed_layout"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="对方已取消"
                android:textColor="@color/textColor_black_light03"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/cancle_reseason_text"
                android:layout_width="@dimen/px_260"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="取消原因：取消原因就是，我不想要了。"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/normal_textsize"
                android:visibility="gone"/>

            <Button
                android:id="@+id/cancle_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/agree_btn"
                android:background="@color/cmbkb_transparent"
                android:text="不通过"
                android:textColor="@color/chenghong_textcolor"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/agree_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/cmbkb_transparent"
                android:text="通过"
                android:gravity="center"
                android:textColor="@color/green"
                android:layout_marginRight="@dimen/margin_15"
                android:textSize="@dimen/text_size_12"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginRight="@dimen/margin_25"/>
        <RelativeLayout
            android:id="@+id/pei_re1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_80"
            android:layout_alignParentRight="true"
            android:background="@drawable/pressed_layout"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10">
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/textColor_black_light02"
                android:text="11"/>
            <TextView
                android:id="@+id/pei_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px_30"
                android:layout_toLeftOf="@+id/pei_text"
                android:background="@color/cmbkb_transparent"
                android:gravity="center"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/normal_textsize"/>

            <TextView
                android:id="@+id/pei_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/cmbkb_transparent"
                android:gravity="center"
                android:text="5元"
                android:textColor="@color/yellow_textcolor"
                android:textSize="@dimen/normal_textsize"/>
            <!--星级评分-->
            <RatingBar
                android:id="@+id/fen_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:isIndicator="true"
                android:stepSize="1"
                android:rating="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin_10"
                android:progressDrawable="@drawable/layer_ordered"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>