<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_text"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px_535"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/login_bg" >
        <!--验证码登录-->
        <include
            android:id="@+id/login_authcode_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/login_child_login"
            android:visibility="gone" />
        <!--设置密码-->
        <include
            android:id="@+id/login_setpassword_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/login_child_pwdsetting"
            android:visibility="gone" />

        <!--密码登录-->
        <include
            android:id="@+id/login_password_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/login_child_pwdlogin" />
    </LinearLayout>


</LinearLayout>
