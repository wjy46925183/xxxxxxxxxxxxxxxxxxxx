<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:id="@+id/worker_title"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/worker_iv_mine"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@mipmap/ic_wode" />

        <TextView
            android:id="@+id/worker_tv_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/shape_edittext_gray"
            android:drawableLeft="@mipmap/map_edittext_search"
            android:drawablePadding="7dp"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:text="请输入关键字"
            android:textColor="#c6c5c5"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/worker_iv_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:src="@mipmap/icon_message" />
            <ImageView
                android:id="@+id/worker_iv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/map_point_red"
                android:visibility="gone"
                />
        </LinearLayout>
</LinearLayout>