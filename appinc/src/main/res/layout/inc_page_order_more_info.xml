<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/inc_height_5_5_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/inc_width_3_80"
            android:paddingRight="@dimen/inc_width_3_80"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纳税人识别号"
                android:textColor="@color/receipt_txt1"
                android:textSize="@dimen/inc_text_size_15"/>

            <EditText
                android:id="@+id/et_taxpayer_distinguish_number"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:textCursorDrawable="@null"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:background="@null"
                android:hint="请填写纳税人识别号"
                />
        </LinearLayout>
        <View
            style="@style/inc_line_thin_full"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/inc_height_5_5_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/inc_width_3_80"
            android:paddingRight="@dimen/inc_width_3_80"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textColor="@color/receipt_txt1"
                android:textSize="@dimen/inc_text_size_15"/>

            <EditText
                android:id="@+id/et_company_address"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="请填写公司地址"
                />
        </LinearLayout>
        <View
            style="@style/inc_line_thin_full"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/inc_height_5_5_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/inc_width_3_80"
            android:paddingRight="@dimen/inc_width_3_80"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textColor="@color/receipt_txt1"
                android:textSize="@dimen/inc_text_size_15"/>

            <EditText
                android:id="@+id/et_company_phone"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="请填写公司电话"
                />
        </LinearLayout>
        <View
            style="@style/inc_line_thin_full"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/inc_height_5_5_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/inc_width_3_80"
            android:paddingRight="@dimen/inc_width_3_80"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行"
                android:textColor="@color/receipt_txt1"
                android:textSize="@dimen/inc_text_size_15"/>

            <EditText
                android:id="@+id/et_bank_account"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="请填写开户行"
                />
        </LinearLayout>
        <View
            style="@style/inc_line_thin_full"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/inc_height_5_5_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/inc_width_3_80"
            android:paddingRight="@dimen/inc_width_3_80"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行帐号"
                android:textColor="@color/receipt_txt1"
                android:textSize="@dimen/inc_text_size_15"/>

            <EditText
                android:id="@+id/et_bank_account_number"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="请填写开户行帐号"
                />
        </LinearLayout>
        <View
            style="@style/inc_line_thin_full"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/inc_height_5_5_80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/inc_width_3_80"
            android:paddingRight="@dimen/inc_width_3_80"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注说明"
                android:textColor="@color/receipt_txt1"
                android:textSize="@dimen/inc_text_size_15"/>

            <EditText
                android:id="@+id/et_remarks_explain"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="请填写备注说明"
                />
        </LinearLayout>
        <View
            style="@style/inc_line_thin_full"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/inc_width_3_80"
        android:paddingRight="@dimen/inc_width_3_80">
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inc_height_5_5_80"
            android:background="@color/bottom_btn_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/inc_text_size_15"
            android:text="确认"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</LinearLayout>