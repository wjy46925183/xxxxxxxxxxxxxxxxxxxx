<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inc_margin_20"
        android:text="请输入兑换码"
        android:layout_marginBottom="@dimen/inc_margin_20"
        android:layout_marginLeft="@dimen/inc_margin_10"
        android:textSize="@dimen/inc_text_size_16"
        android:gravity="center_vertical|left">
    </TextView>

    <EditText
        android:id="@+id/ed_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inc_margin_10"
        android:layout_marginRight="@dimen/inc_margin_10"
        android:hint="请输入八位兑换码"
        android:background="@drawable/inc_bg_exchange"
        android:gravity="center"
        android:paddingTop="@dimen/inc_margin_10"
        android:paddingBottom="@dimen/inc_margin_10">
    </EditText>

    <Button
        android:id="@+id/bt_exchange"
        android:layout_marginTop="@dimen/inc_margin_25"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/inc_padding_10"
        android:layout_marginRight="@dimen/inc_padding_10"
        android:background="@drawable/inc_btn_selector_pay"
        android:text="确认兑换"
        android:textSize="@dimen/inc_text_size_16"
        android:textColor="@color/white">
    </Button>
</LinearLayout>