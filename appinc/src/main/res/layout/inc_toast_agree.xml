<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@drawable/inc_shape_order"
              android:padding="@dimen/inc_margin_10"
    >
    <TextView
        android:id="@+id/tv_title_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/duihao"
        android:text="已同意"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/inc_margin_5"
        android:visibility="gone"
        android:drawablePadding="4dp"/>
    <TextView
        android:id="@+id/tv_message_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请审批下一个雇员"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_below="@+id/tv_title_toast"
        android:layout_centerInParent="true"
        />
</RelativeLayout>