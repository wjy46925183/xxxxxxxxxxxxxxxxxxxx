<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="true"
                android:background="#efefef"
    android:paddingTop="@dimen/margin_7"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
    >

    <LinearLayout
        android:id="@+id/ll_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:addStatesFromChildren="true"
        android:background="@drawable/pressed_layout"
        android:paddingTop="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="true">

            <TextView
                android:id="@+id/ordername_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="服务员"
                android:textColor="@color/black_textcolor"
                android:textSize="@dimen/normal_textsize"/>

            <TextView
                android:id="@+id/type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_toRightOf="@id/ordername_text"
                android:background="@drawable/day_type_style"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="双休日"
                android:textColor="@color/right_nochange_textcolor"
                android:textSize="@dimen/small_11_textsize"/>

            <TextView
                android:id="@+id/baoxian"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/type_text"
                android:background="@mipmap/baoxian"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="invisible"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="03-27至30     9:00-18:00"
            android:layout_marginBottom="@dimen/margin_10"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@+id/ll_card"
            android:background="@color/gray_line"/>
        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:orientation="vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_20"
        android:textColor="@color/chenghong_textcolor"
        android:text="ssss"
        android:layout_marginRight="@dimen/margin_15"
        android:textSize="@dimen/normal_textsize"/>
</RelativeLayout>