<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_5"
        android:background="@color/recharge_color"
        android:visibility="gone">

    </TextView>

    <ListView
        android:id="@+id/lv_pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0.5dp"
        android:divider="@color/bg_gray"
        android:paddingLeft="@dimen/width_1_80"
        android:paddingRight="@dimen/width_1_80">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_10"
        android:background="@color/app_theme_color">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_7_80"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding_10"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="金额（元）">
        </TextView>


        <EditText
            android:id="@+id/ed_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_6_80"
            android:background="@drawable/edittxt_bg"
            android:gravity="center_vertical|end"
            android:inputType="number"
           >
        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/bt_recharge"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:background="@drawable/btn_selector_pay"
        android:text="立即充值"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white">
    </Button>
</LinearLayout>