<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_15">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_default_user" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:singleLine="true"
            android:text="36.0"
            android:textColor="@color/app_color_yellow_01"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_7"
            android:singleLine="true"
            android:text="诚信档案"
            android:textColor="@color/app_color_grey_01"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:paddingTop="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLength="8"
                android:text="柳如逝"
                android:textColor="@color/app_color_black_01"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_orders_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="已接10单"
                android:textColor="@color/app_color_yellow_01"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="@dimen/padding_15"
                android:text="距离352m"
                android:textColor="@color/app_color_grey_03"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/rb_score_grade"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_7"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:progressDrawable="@drawable/star_yellow"
            android:rating="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/tv_work_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="电工证、焊工证"
            android:textColor="@color/app_color_black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_remarks_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_7"
            android:singleLine="true"
            android:text="想从事电工或者焊工方面的工作"
            android:textColor="@color/app_color_black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center|left"
            android:orientation="vertical"
            android:text="提供的服务:保洁 3元/小时...等等3项"
            android:textColor="@color/app_color_yellow"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_line"
            style="@style/line_thin_full"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10" />
    </LinearLayout>

</LinearLayout>