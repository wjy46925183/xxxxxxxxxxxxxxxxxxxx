<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/weibo"/>
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_text"
        android:layout_marginTop="@dimen/margin_10"
        android:text="一叶建木"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_colors_grey"
        android:layout_marginTop="@dimen/margin_10"
        android:text="欢迎加入打零工,现在绑定手机号"/>
    <EditText
        android:id="@+id/phone_text"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="请输入手机号"
        android:gravity="center_vertical"
        android:textColorHint="@color/hint_textcolor"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:background="@color/white"/>
    <View
        style="@style/linethin_notfull"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_5_80"
        android:background="@color/white">
        <EditText
            android:layout_gravity="center_vertical"
            android:id="@+id/code_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:background="@null"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hint_textcolor"
            android:textSize="14sp"
            android:layout_weight="5"/>
        <View android:layout_width="0.5dp"
            android:layout_marginTop="7dp"
            android:layout_height="30dp"
            android:background="@color/bg_color"/>
        <LinearLayout
            android:id="@+id/getcode_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:id="@id/wait_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time"
                    android:paddingTop="@dimen/padding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_textcolor"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_horizontal"
                    android:text="57秒"/>

                <TextView
                    android:paddingBottom="@dimen/padding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_textcolor"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_horizontal"
                    android:text="重新获取"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/getNew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/yellow_textcolor"
                android:text="重新获取"/>

        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/getcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/yellow_textcolor"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:text="获取验证码"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        style="@style/Button_Blue"
        android:layout_marginTop="@dimen/margin_30"
        android:text="登录"/>

</LinearLayout>
