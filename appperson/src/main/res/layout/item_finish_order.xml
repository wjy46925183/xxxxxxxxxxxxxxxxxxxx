<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.dlg.personal.oddjob.view.HirerPublicView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/public_view"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_25"/>
    <RelativeLayout
        android:paddingLeft="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:background="@drawable/pressed_layout"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="对方已取消"
            android:textColor="@color/textColor_black_light03"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="12"
            android:layout_marginRight="@dimen/margin_15"
            android:textColor="@color/orange_yellow"
            android:textSize="@dimen/text_size_12"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_25"/>
    <RelativeLayout
        android:id="@+id/pei_re1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_80"
        android:layout_alignParentRight="true"
        android:background="@drawable/pressed_layout"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">
        <TextView
            android:id="@+id/tv_no_ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor_black_light03"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:textSize="@dimen/text_size_12"
            android:text="未评价"/>
        <TextView
            android:id="@+id/ping_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/cmbkb_transparent"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/yellow_textcolor"
            android:layout_marginRight="@dimen/margin_10"
            android:textSize="@dimen/text_size_12"/>
        <!--星级评分-->
        <RatingBar
            android:id="@+id/fen_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:isIndicator="true"
            android:stepSize="1"
            android:rating="1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:progressDrawable="@drawable/layer_ordered"
            />
    </RelativeLayout>
</LinearLayout>